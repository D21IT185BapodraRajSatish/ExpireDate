<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Expire_Date" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Text Input Layout-->
    <style name="TEXTINPUTLAYOUT" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="itemRippleColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="TXT_VIEW_EDIT" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">15sp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <!--Crad bg-->
    <style name="LAYOUT" parent="CardView">
        <item name="background">@color/white</item>
    </style>

    <style name="BTN" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">#ffff</item>
    </style>

    <style name="Bottom_NAV" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/item_selector</item>
        <item name="itemTextColor">@drawable/item_selector</item>
        <item name="android:background">@color/purple_500</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TXT_VIEW" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">10sp</item>
        <item name="itemTextColor">@drawable/item_selector</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="TEXT_VIEW_one" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>